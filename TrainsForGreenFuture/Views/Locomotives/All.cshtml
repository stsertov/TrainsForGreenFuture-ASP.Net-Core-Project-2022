@model IEnumerable<LocomotiveViewModel>
@{
    ViewData["Title"] = "Locomotives";
}
<h1 class="text-center mt-2">Locomotives</h1>

<div class="row">
    @foreach (var locomotive in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img class="card-img-top" src="@locomotive.Picture" alt="@locomotive.Model @locomotive.Series - @locomotive.Year (@locomotive.EngineType)">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@locomotive.Year  @locomotive.Model @locomotive.Series (@locomotive.EngineType)</h5>
                    <a asp-controller="Orders" asp-action="OrderLocomotive" asp-route-id="@locomotive.Id" class="btn btn-primary">Order</a>
                    <a asp-controller="Locomotives" asp-action="Details" asp-route-id="@locomotive.Id" class="btn btn-info">More</a>
                    @if (User.IsAdmin())
                    {
                        <a asp-area="Admin" asp-controller="Locomotives" asp-action="Edit" asp-route-id="@locomotive.Id" class="btn btn-warning">Edit</a>
                        <a asp-area="Admin" asp-controller="Locomotives" asp-action="Delete" asp-route-id="@locomotive.Id" class="btn btn-danger">Remove</a>
                    }
                </div>
            </div>
        </div>
    }
</div>

