@model OrderTrainCarFormModel

@{
    ViewBag.Title = "Train Cars - Order Now";
}


<div class="row">
    <div class="col-md-4">
        <div class="card mb-3">
            <img class="card-img-top" src="@Model.TrainCar.Picture" alt="@Model.TrainCar.Model @Model.TrainCar.Series - @Model.TrainCar.Year (@Model.TrainCar.CategoryName)">
            <div class="card-body text-center">
                <h5 class="card-title text-center">@Model.TrainCar.Year  @Model.TrainCar.Model @Model.TrainCar.Series (@Model.TrainCar.CategoryName)</h5>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-3">
            <form method="post">

                <div class="form-group">
                    <label asp-for="InterrailLength">Interrail</label>
                    <select asp-for="InterrailLength" class="form-control">
                        @foreach (var interrail in @Model.Interrails)
                        {
                            <option value="@interrail.Length">@interrail.Length mm</option>
                        }
                    </select>
                    <span asp-validation-for="InterrailLength" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LuxuryLevel">Luxury Level</label>
                    <select asp-for="LuxuryLevel" class="form-control">
                        <option value="Low">Low</option>
                        <option value="Normal">Normal</option>
                        <option value="Luxury">Luxury</option>
                    </select>
                    <span asp-validation-for="LuxuryLevel" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Count"></label>
                    <input asp-for="Count" class="form-control" placeholder="How many do you want to order?">
                    <span asp-validation-for="Count" class="small text-danger"></span>
                </div>
                <div class="form-group" hidden type="text">
                    <label asp-for="TrainCarId"></label>
                    <input asp-for="TrainCarId" class="form-control" value="@Model.TrainCar.Id">
                    <span asp-validation-for="TrainCarId" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary mt-3" type="submit" value="Purchase" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}