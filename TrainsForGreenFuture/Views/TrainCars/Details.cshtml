@model TrainCarViewModel
@{
    ViewBag.Title = $"More about {@Model.Model}";
}

<div class="row">

    <div class="col-md-6">
        <img src="@Model.Picture" class="img-responsive" alt="@Model.Model" width="630" height=auto>
    </div>

    <div class="col-md-6">
        <h2>(@Model.Year) @Model.Series / @Model.Model</h2>
        <br />
        <p>Category : @Model.CategoryName</p>
        <p>Luxury level : @Model.LuxuryLevel</p>
        <p>Seats count: @Model.SeatCount seats</p>
        <p>Interrail : @Model.InterraiLength mm</p>
        <p>@Model.Description</p>
        <h2>Price : €@String.Format("{0:n}", @Model.Price)</h2>
        <br />
        <a asp-controller="Orders" asp-action="OrderTrainCar" asp-route-id="@Model.Id" class="btn btn-primary " style="width: 200px; height: auto;">Order Now</a>
    </div>
</div>
