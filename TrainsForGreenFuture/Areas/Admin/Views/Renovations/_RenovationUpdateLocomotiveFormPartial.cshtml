@model RenovationDetailsViewModel

<div class="row">
    <div class="col-md-6">
        <img src="@Model.Locomotive.Picture" class="img-responsive" alt="@Model.Locomotive.Model" width="630" height=auto>
        <h2>(@Model.Locomotive.Year) @Model.Locomotive.Series / @Model.Locomotive.Model</h2>
        <p>Renovation type : @Model.RenovationVolume</p>
        <p>@Model.Locomotive.Description</p>
    </div>

    <div class="col-md-6">
        <form method="post">

            <div class="form-group">
                <label asp-for="Deadline">Deadline in Months</label>
                <input asp-for="Deadline" class="form-control" placeholder="When will the renovation be done...">
                <span asp-validation-for="Deadline" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price">Price (€)</label>
                <input asp-for="Price" class="form-control" placeholder="How much does it cost?">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment">Comment</label>
                <textarea asp-for="Comment" rows="4" class="form-control" placeholder="Write a comment about the renovation you are planning."></textarea>
                <span asp-validation-for="Comment" class="small text-danger"></span>
            </div>
            <input class="btn btn-warning mt-3" type="submit" value="Update" />
            <a asp-area="Admin" asp-controller="Renovations" asp-action="All" asp-route-id="" class="btn btn-danger mt-3" style="width: 200px; height: auto;">Back</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}