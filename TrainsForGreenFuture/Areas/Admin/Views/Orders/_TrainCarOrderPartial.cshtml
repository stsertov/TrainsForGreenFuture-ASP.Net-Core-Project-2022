@model OrderViewModel

@{
    var fullPrice = (Model.AdditionalInterrailTax + Model.AdditionalLuxuryLevelTax + Model.TrainCar.Price) * Model.Count;
    var daysToDelivery = Math.Ceiling((Model.OrderDate.AddDays(Model.Count * 5) - DateTime.UtcNow).TotalDays);

}

<tr>
    <td scope="col">@Model.OrderDate</td>
    <td scope="col">@Model.Company</td>
    <td scope="col">@Model.Id</td>
    <td scope="col">@Model.OrderType</td>
    <td scope="col">@Model.TrainCar.Year</td>
    <td scope="col">@Model.TrainCar.Model</td>
    <td scope="col">@Model.TrainCar.Series</td>
    <th scope="col">@Model.TrainCar.CategoryName</th>
    <th scope="col">@Model.TrainCar.SeatCount</th>
    <th scope="col">@Model.TrainCar.LuxuryLevel</th>
    <td scope="col">@Model.Count</td>
    <td scope="col">€@String.Format("{0:n}", @fullPrice)</td>
    <td scope="col">@(Model.IsPaid == true ? "Executed" : Model.IsApproved ? "Received" : "Pending")</td>

    <td scope="col">
        @if (!Model.IsApproved)
        {
            <a asp-area="Admin" asp-controller="Orders" asp-action="Approve" asp-route-id="@Model.Id" class="btn btn-warning float-right ml-3">Approve</a>
        }
        @*<a asp-area="Admin" asp-controller="Cars" asp-action="ChangeVisibility" asp-route-id="@car.Id" class="btn btn-info float-right ml-3">@(car.IsPublic ? "Hide" : "Show")</a>*@
    </td>
</tr>